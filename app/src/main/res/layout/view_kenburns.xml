    <ImageView
        android:id="@+id/image0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/header_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
