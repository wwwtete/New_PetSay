<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hot_details_bg" >

    <LinearLayout
        android:id="@+id/layout_listtitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/hot_details_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_review"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="转发和评论"
            android:textColor="@color/hot_titlebar" />

        <TextView
            android:id="@+id/tv_tread"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="踩"
            android:textColor="@color/hot_titlebar" />
    </LinearLayout>

    <ImageView
        android:id="@+id/underline"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_below="@id/layout_listtitle"
        android:background="@color/list_name" />

</RelativeLayout>