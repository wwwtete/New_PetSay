<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_tag_item_bg"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/display_tag_bg_pink"
        android:textColor="#ffffff" />

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp" >
        
        <ImageView
            android:id="@+id/tagView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" android:background="#FFFFFF" android:padding="1dp"
            android:adjustViewBounds="true" />

        <View
            android:layout_width="5dp"
            android:layout_height="1dp" />

        <ImageView
            android:id="@+id/tagView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true" android:background="#FFFFFF" android:padding="1dp"/>

        <View
            android:layout_width="5dp"
            android:layout_height="1dp" />

        <ImageView
            android:id="@+id/tagView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true" android:background="#FFFFFF" android:padding="1dp"/>

        <View
            android:layout_width="5dp"
            android:layout_height="1dp" />

        <ImageView
            android:id="@+id/tagView4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true" android:background="#FFFFFF" android:padding="1dp"/>
    </LinearLayout>

</LinearLayout>