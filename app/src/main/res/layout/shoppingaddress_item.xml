<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/swipe_backview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/chat_delte_icon"/>

    <RelativeLayout
        android:id="@+id/swipe_frontview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:src="@drawable/order_noselected_address_icon"/>

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/shopping_address_edit_icon"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_toLeftOf="@id/iv_edit"
            android:layout_toRightOf="@id/iv_icon">
            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_detail_title_text"
                android:text="收货人："/>

            <TextView
                android:id="@+id/tv_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_detail_title_text"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/dianhua"
                android:drawablePadding="10dp"
                android:text="234234"/>

            <TextView
                android:id="@+id/tv_receivename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_label"
                android:layout_toLeftOf="@id/tv_telephone"
                android:layout_marginRight="5dp"
                style="@style/order_detail_title_text"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="adf"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_detail_label_text"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_label"
                android:text="adffasdfsaffsadf"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>