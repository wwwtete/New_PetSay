<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="3dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.petsay.component.view.MarkImageView
        android:id="@+id/iv_content"
        app:mark_src="@drawable/audio_flag_icon"
        app:content_src="@drawable/pet1"
        app:mark_visibility ="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.petsay.component.view.CircleImageView
            android:id="@+id/img_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/placeholderhead"
            app:border_color="#ffffff"
            app:border_width="2dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/hot_name_color"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/img_header"/>

        <!--<TextView-->
            <!--android:id="@+id/tv_type"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/tv_name"-->
            <!--android:textColor="#AAABAA"-->
            <!--android:layout_toRightOf="@id/img_header"/>-->

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A0A0A0"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/img_header"
            android:gravity="right"/>

        </RelativeLayout>

</LinearLayout>